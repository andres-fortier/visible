{{#if isEditing}}
  <td>{{bootstrap-datepicker value=bufferedModel.tradeDate class="form-control"}}</td>
  <td>{{input type="number" step="any" class="form-control" value=bufferedModel.openValue}}</td>
  <td>{{input type="number" step="any" class="form-control" value=bufferedModel.closeValue}}</td>
  <td>{{input type="number" step="any" class="form-control" value=bufferedModel.highValue}}</td>
  <td>{{input type="number" step="any" class="form-control" value=bufferedModel.lowValue}}</td>
  <td>
    <button type="button" class="btn btn-success" {{action "saveRecord"}}>
      <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
    </button>
    <button type="button" class="btn btn-warning" {{action "cancelEdit"}}>
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
    </button>
  </td>
{{else}}
  <td>{{stockQuote.tradeDate}}</td>
  <td>{{stockQuote.openValue}}</td>
  <td>{{stockQuote.closeValue}}</td>
  <td>{{stockQuote.highValue}}</td>
  <td>{{stockQuote.lowValue}}</td>
  <td>
    <button type="button" class="btn btn-default" {{action "editRecord"}}>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </button>
    <button type="button" class="btn btn-danger" {{action "deleteRecordWithConfirmation"}}>
      <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
    </button>
  </td>
{{/if}}

